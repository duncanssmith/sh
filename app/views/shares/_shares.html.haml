%table.index_data
  %tr 
    %th Name
    %th Code
    %th Current price
    %th &nbsp;
    %th &nbsp;
    %th &nbsp;

  - @shares.each do |share| 

    %tr{:class => cycle('list-line-odd', 'list-line-even')}
      %td 
        = share.name 
      %td 
        = share.code 
      %td 
        = number_to_currency(share.current_price.to_f / 100, :precision => 2, :unit => "")
      %td 
        = link_to 'Show', share 
      %td 
        = link_to 'Edit', edit_share_path(share) 
      %td 
        = link_to 'Destroy', share, :confirm => 'Are you sure?', :method => :delete 
  

