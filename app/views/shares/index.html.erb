<h1>Listing shares</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Current price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shares.each do |share| %>
  <tr>
    <td><%= share.name %></td>
    <td><%= share.code %></td>
    <td><%= share.current_price %></td>
    <td><%= link_to 'Show', share %></td>
    <td><%= link_to 'Edit', edit_share_path(share) %></td>
    <td><%= link_to 'Destroy', share, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

