!!!
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      =h(yield("sh")) || controller.action_name
    = stylesheet_link_tag :all 
    = javascript_include_tag 'jquery'
    = javascript_include_tag 'application', 'tabs'
    -#%script{ :type => "text/javascript", :charset => "utf-8" }
    -#%script{ :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", :type => "text/javascript" }
    = javascript_include_tag :defaults
    = javascript_include_tag 'pagination', 'jquery', 'rails.js', 'alert'
    = csrf_meta_tag
  %body
    #banner
      
    #container
      - flash.each do |name, msg|
        - content_tag :div, msg, :id => "flash_#{name}"
    #user_nav
      .underlinemenu
        %ul
          %li
            %a{ :href => "#", :id => "alert", :data => { :message => "Hi Duncan!" } }
              Click me
          %li
            = link_to 'Shares', :controller => 'shares'
          %li
            = link_to 'Investments', :controller => 'investments'
          %li
            = link_to 'Dividends', :controller => 'dividends'
    %p.flash_notice
      = flash[:notice]
    %p.flash_warn
      = flash[:warning]
    %p.flash_error
      = flash[:error]
    .content
      = yield  :layout
